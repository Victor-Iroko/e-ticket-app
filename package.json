{
  "name": "e-ticket-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "test:unit": "vitest --project unit",
    "test:nuxt": "vitest --project nuxt",
    "test:watch": "vitest --watch",
    "test:related": "vitest related --run",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down",
    "db:destroy": "docker compose down -v",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -e .env -- drizzle-kit migrate",
    "db:seed": "bun run ./server/database/seed.ts",
    "db:studio": "dotenv -e .env -- drizzle-kit studio",
    "dev:all": "concurrently -k -n \"APP,DB,STUDIO\" -c \"blue,green,magenta\" \"bun run dev\" \"docker compose up\" \"bun run db:studio\"",
    "prepare": "husky",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@nuxt/eslint": "1.12.1",
    "@nuxt/hints": "1.0.0-alpha.5",
    "@nuxt/image": "2.0.0",
    "@nuxt/test-utils": "^3.21.0",
    "@nuxt/ui": "4.3.0",
    "@nuxtjs/seo": "3.3.0",
    "@pinia/nuxt": "0.11.3",
    "@vueuse/nuxt": "14.1.0",
    "better-auth": "^1.4.9",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "eslint": "^9.0.0",
    "nodemailer": "^7.0.12",
    "nuxt": "^4.2.2",
    "nuxt-security": "2.5.0",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "typescript": "^5.6.3",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.9",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/nodemailer": "^7.0.4",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright-core": "^1.57.0",
    "postgres": "^3.4.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,vue,js,json}": [
      "bun lint",
      "bun format",
      "bun test:related"
    ]
  }
}
